<h1>Listing admin_galleries</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_galleries.each do |admin_gallery| %>
      <tr>
        <td><%= admin_gallery.name %></td>
        <td><%= admin_gallery.description %></td>
        <td><%= link_to 'Show', admin_gallery %></td>
        <td><%= link_to 'Edit', edit_gallery_path(admin_gallery) %></td>
        <td><%= link_to 'Destroy', admin_gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

