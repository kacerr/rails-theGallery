<h1>Listing galleries</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.name %></td>
        <td><%= gallery.description %></td>
        <td><%= link_to 'Show', view_gallery_path(gallery) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
